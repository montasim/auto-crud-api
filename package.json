{
  "name": "auto-crud-api",
  "version": "1.0.0",
  "description": "Dynamically creates Mongoose models, Zod schemas, and Express routes based on predefined schema definitions. Also supports dummy data generation for testing purposes.",
  "main": "server.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=23.x",
    "npm": ">=10.x"
  },
  "repository": "https://github.com/montasim/auto-crud-api",
  "homepage": "https://github.com/montasim/auto-crud-api/",
  "issues": "https://github.com/montasim/auto-crud-api/issues",
  "bugs": "https://github.com/montasim/auto-crud-api/bugs",
  "termsOfService": "https://github.com/montasim/auto-crud-api/terms-of-service",
  "documentation": {
    "docs": "https://github.com/montasim/auto-crud-api/docs",
    "swagger": "https://github.com/montasim/auto-crud-api/docs",
    "tutorials": "https://github.com/montasim/auto-crud-api/tutorials"
  },
  "author": {
    "name": "Mohammad Montasim -Al- Mamun Shuvo",
    "portfolio": "https://montasim-dev.web.app/",
    "contact": {
      "email": "montasimmamun@gmail.com",
      "mobile": "+8801722815469"
    },
    "social": {
      "linkedIn": "https://www.linkedin.com/in/montasim",
      "gitHub": "https://github.com/montasim"
    }
  },
  "scripts": {
    "start": "pm2 start ./build/server.js --watch --ignore-watch=\"node_modules\"",
    "restart": "pm2 restart server",
    "dev": "nodemon server.js",
    "postman:generate": "node generatePostmanCollection.js",
    "swagger:generate": "node generateSwaggerFromPostman.js",
    "generate:project:structure": "treee --ignore 'node_modules/, .git/, .idea/, logs/' -l 2 -o projectStructure.txt -a",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "lint:fix": "eslint . --fix && prettier . --write",
    "build": "node terser.js && npm run sentry:sourcemaps",
    "docker:build": "docker build --no-cache -t auto-crud-api .",
    "docker:run": "docker run --env-file .env.production -p 5000:5000 auto-crud-api",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=auto-crud-api) && docker rm $(docker ps -aq --filter ancestor=auto-crud-api)",
    "docker:rebuild": "docker-compose -f docker-compose-development.yml up --build --force-recreate",
    "docker:logs": "docker logs -f $(docker ps -q --filter ancestor=auto-crud-api)",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org ndevers --project auto-crud-api ./build && sentry-cli sourcemaps upload --org ndevers --project auto-crud-api ./build"
  },
  "keywords": [],
  "license": "CC BY-NC-ND 4.0",
  "dependencies": {
    "@faker-js/faker": "^9.4.0",
    "@sentry/cli": "^2.41.1",
    "@sentry/node": "^8.54.0",
    "@sentry/profiling-node": "^8.54.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "content-types-lite": "^0.1.2",
    "cors": "^2.8.5",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "glob": "^11.0.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-lite": "^0.1.5",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.0.0",
    "jsonwebtoken": "^9.0.2",
    "log-symbols": "^7.0.0",
    "mime-types-lite": "^1.5.1",
    "mongoose": "^8.9.6",
    "morgan": "^1.10.0",
    "pm2": "^5.4.3",
    "postman-collection": "^4.5.0",
    "postman-to-openapi": "^1.7.3",
    "randexp": "^0.5.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "terser": "^5.37.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "eslint": "^9.5.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3"
  }
}
